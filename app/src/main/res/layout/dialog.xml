<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_chat_passcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please Enter PassCode"
        android:textSize="30sp"
        android:layout_margin="15dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:fontFamily="serif"/>

    <EditText
        android:id="@+id/edit_chat_passcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:layout_below="@+id/text_chat_passcode"
        android:layout_margin="15sp"
        android:textSize="24dp"
        android:inputType="number"
        android:fontFamily="serif"/>

    <Button
        android:id="@+id/button_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_chat_passcode"
        android:layout_centerVertical="true"
        android:layout_margin="15sp"
        android:background="#03A9F4"
        android:padding="10dp"
        android:text="   OK   "
        android:textColor="#FFF"
        android:textSize="30dp" />

    <Button
        android:id="@+id/button_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#F44336"
        android:text="CANCEL"
        android:textSize="30dp"
        android:textColor="#FFF"
        android:layout_below="@id/edit_chat_passcode"
        android:layout_toRightOf="@+id/button_ok"
        android:layout_margin="15sp"
        android:padding="10dp"/>

</RelativeLayout>